
    <div class="row justify-content-center">

            <div class="card">
                <div class="card-img-top">
                    <%= image_tag  @todo.task.image %>
                </div>
                <div class="card-body">
                    <h4 class="card-text"> <%= @todo.task.name %></h4>
                 <%= link_to  "Listado de Tareas", todos_path, class: 'btn btn-info p-2'  %>
                </div><br>
            
            </div>
            
        <div class="card" style="width: 18rem;">
             <div class="card-header">
                <h3> Usuarios que completaron la tarea:</h3>
            </div>
            <ul class="list-group list-group-flush">
                <% @todos.each do |todo|%>
             <li class="list-group-item"> <%= todo.user.email %> </li>
             <% end %>
                </ul>
        </div>
    </div>
